[include]
    path = ~/.gitconfig.local

[core]
    excludesfile = ~/.gitignore_global

    ## 改行コードの変換をしない
    autocrlf = false

    ## ページャーとしてlessを利用
    pager = less -R

    ## 日本語ファイル名などをエスケープしない
    quotepath = false

[color]
    ## 自動設定されるカラーを利用
    ui = true

[push]
    ## カレントブランチに追跡ブランチが設定されている
    ## さらにブランチ名が同じ場合のみpushする
    default = simple

[pull]
    ## git pull時にfast forwardのみ行う
    ## できない場合はエラーとなるので下記のようなコマンドで手動解消が必要
    ## git fetch && git rebase
    ff = only

[merge]
    ## merge時にfast forwardを使わずmergeを行う
    ## 明示的にmergeをしたい場合は --ff をつけて実行する
    ff = false

[alias]
    addp = add --patch
    addi = add --interactive

    unstage = reset HEAD

    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
    ignore = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >> .gitignore
    info = remote show origin

    l = log --graph -n 20 --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset'
    ll = log --stat --abbrev-commit
    ln = log --graph -n 20 --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset' --name-status
    lp = log --oneline -n 20 -p
    ls = log --stat --abbrev-commit -n 1 # display previous log

    elog-tree = log --oneline --decorate --graph
    elog-list = log --date=short --pretty=format:'%ad %h (%an): %s'
    estatus-short = status --short --branch

    hg-revert-all = reset --hard HEAD
    hg-revert = checkout --
    hg-rollback = reset --soft HEAD^

    status-sb = status -sb

[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f

[filter "lfs"]
    required = true
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f

